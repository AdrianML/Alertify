<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFrag">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/logocuenta"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="#EA6F27" />

                <TextView
                    android:id="@+id/cuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/cuenta"
                    android:inputType="textCapWords"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Tab"
                    android:textColor="#EA6F27"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:orientation="horizontal"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp">

                <TextView
                    android:id="@+id/tvCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/logOutButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/logout"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="43dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/ic_menu_call"
                    android:tint="#EA6F27" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:capitalize="sentences"
                    android:gravity="center_vertical"
                    android:text="@string/llamadas"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Tab"
                    android:textColor="#EA6F27"
                    android:textSize="18sp" />

            </LinearLayout>

            <Switch
                android:id="@+id/call_911"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text="@string/llamar_a_911"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/call_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:text="@string/llamar_a"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:text="@string/anade_un_contacto_principal_para_esta_opcion"
                android:textSize="15sp" />

            <Button
                android:id="@+id/addPrincipContactButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/anadir_contacto_principal"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoMensajes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/sym_action_email"
                    android:tint="#EA6F27" />

                <TextView
                    android:id="@+id/mensajes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:capitalize="sentences"
                    android:gravity="center_vertical"
                    android:text="@string/mensajes"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Tab"
                    android:textColor="#EA6F27"
                    android:textSize="18sp" />

            </LinearLayout>

            <Switch
                android:id="@+id/useWhatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp"
                android:text="@string/enviar_por_whatsapp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/se_te_mostrar_una_opci_n_para_seleccionar_a_los_contactos"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/useMensajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:text="@string/enviar_por_app_de_mensajes"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:text="@string/registra_tu_mensaje_de_alerta"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:ems="10"
                android:hint="@string/maximo_200_caracteres"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/textViewMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:text="Registra tu mensaje de cancelaciÃ³n"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etMensajeCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:ems="10"
                android:hint="@string/maximo_200_caracteres"
                android:importantForAutofill="no"
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch" />

            <Button
                android:id="@+id/saveMessageButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="false"
                android:text="@string/guardar_mensaje"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="43dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoLocalizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/todo"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:tint="#EA6F27" />

                <TextView
                    android:id="@+id/localizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:capitalize="sentences"
                    android:gravity="center_vertical"
                    android:text="@string/localizacion"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Tab"
                    android:textColor="#EA6F27"
                    android:textSize="18sp" />

            </LinearLayout>

            <Switch
                android:id="@+id/sendLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:text="@string/compartir_localizacion"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/si_desactivas_esta_opci_n_no_se_veran_tus_alertas_en_el_mapa"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoContactos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:src="@android:drawable/ic_menu_add"
                    android:tint="#EA6F27"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/contactos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:capitalize="words"
                    android:text="@string/contactos"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Tab"
                    android:textColor="#EA6F27"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/lstContactos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|start"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:includeFontPadding="false"
                android:orientation="horizontal"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
                android:textSize="15sp">

                <Button
                    android:id="@+id/addNewContactButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/anadir"
                    android:textAllCaps="false"
                    android:textColorLink="@color/colorAccent" />

                <Button
                    android:id="@+id/deleteContactButton"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/eliminar"
                    android:textAllCaps="false"
                    android:textColorLink="@color/colorAccent" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>